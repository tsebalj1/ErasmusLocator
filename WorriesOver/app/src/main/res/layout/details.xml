<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyish">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/greyish">

            <ImageView
                android:id="@+id/top_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/tehnicko_veleuciliste_u_zagrebu"/>

            <TextView
                android:id="@+id/naslov"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="TEHNIČKO VELEUČILIŠTE U ZAGREBU"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:paddingLeft="30dp"/>

            <TextView
                android:id="@+id/adresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Savska 25"
                android:textStyle="italic"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"/>

            <TextView
                android:id="@+id/udaljenost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:paddingLeft="30dp" />

            <TextView
                android:id="@+id/broj_telefona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="+38598 575 575"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"/>

            <TextView
                android:id="@+id/mailAdresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:paddingLeft="30dp"
                android:text="tehnicko-veleuciliste-zagreb@tvz.hr"/>

            <TextView
                android:id="@+id/webLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"
                android:text="www.tvz.hr"/>

            <TextView
                android:id="@+id/radno_vrijeme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="9:00 - 18:00"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/web"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="WEB"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:gravity="center_vertical|left"
                    android:background="@color/dark_grey"
                    android:drawablePadding="5dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="26dip"
                    android:drawableLeft="@drawable/ico_web"

                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"></View>

                <Button

                    android:id="@+id/expand_map"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="MAP"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/white"
                    android:background="@color/dark_grey"
                    android:drawableLeft="@drawable/expand"
                    android:drawablePadding="5dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="26dip"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/call"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="CALL"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@color/dark_grey"
                    android:drawablePadding="5dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="26dip"
                    android:drawableLeft="@drawable/phone"

                    />
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"></View>

                <Button
                    android:id="@+id/send_mail"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="E-MAIL"
                    android:textColor="@color/white"
                    android:background="@color/dark_grey"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="5dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="26dip"
                    android:textSize="14sp"

                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>